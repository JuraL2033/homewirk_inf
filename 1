from turtle import *

screensize(2000, 2000)
bgcolor('white')
tracer(0)

n = 30

for _ in range(6):
    forward(10 * n)
    right(90)

forward(2 * n)
right(90)

for _ in range(2):
    forward(15 * n)
    right(90)
    forward(4 * n)
    right(90)

up()

for x in range(-20,20):
    for y in range(-20,20):
        setpos(x*n,y*n)
        dot(4,'red')

done()
